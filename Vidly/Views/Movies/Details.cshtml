@model Vidly.ViewModels.MovieDetailViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Movie.Name</h2>
<ul>
    <li>Genre: @Model.Movie.Genre.Name</li>
    <li>Release Date: @Model.Movie.ReleaseDate.DayOfWeek, @Model.Movie.ReleaseDate.ToShortDateString()</li>
    <li>Date Added: @Model.Movie.DateAdded.DayOfWeek, @Model.Movie.DateAdded.ToShortDateString()</li>
    <li>Number in Stock: @Model.Movie.NumberInStock</li>
</ul>

